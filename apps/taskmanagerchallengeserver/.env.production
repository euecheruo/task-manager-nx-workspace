# ----------------------------------------------
# PRODUCTION ENVIRONMENT CONFIGURATION
# Used when NODE_ENV is explicitly set to 'production'
# ----------------------------------------------

# Application Settings
NODE_ENV=production
APP_PORT=8080

# ----------------------------------------------
# PostgreSQL Database Configuration
# NOTE: These MUST point to a secure, external, and backed-up PostgreSQL instance.
# TYPEORM_SYNCHRONIZE should be FALSE in production; migrations must be used.
# ----------------------------------------------
POSTGRES_HOST=prod-db.cloudprovider.com 
POSTGRES_PORT=5432
POSTGRES_USER=prod_taskmanager_user
POSTGRES_PASSWORD=<<INSERT_HIGHLY_SECURE_PROD_PASSWORD_HERE>>
POSTGRES_DB=taskdb_prod
# TYPEORM_SYNCHRONIZE will be inferred as FALSE by config factory when NODE_ENV=production

# ----------------------------------------------
# JWT Configuration (Authentication)
# SECRETS MUST BE RANDOMLY GENERATED, LONG, AND KEPT SECURE.
# ----------------------------------------------
JWT_ACCESS_SECRET=<<INSERT_PRODUCTION_ACCESS_SECRET_KEY>>
JWT_REFRESH_SECRET=<<INSERT_PRODUCTION_REFRESH_SECRET_KEY>>
JWT_ACCESS_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=30d